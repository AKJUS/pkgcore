#!/usr/bin/env pkgcore-ipc-helper

OPTIONS=(
	"--cwd=\"${PWD}\""
	"--dest=\"${INSDESTTREE}\""
	"--insoptions=\"${INSOPTIONS}\""
	"--diroptions=\"${DIROPTIONS}\""
)

if [[ -n ${INSDESTTREE} && -z ${INSDESTTREE%${ED}*} ]]; then
	__helper_exit 2 "do not give \${D} or \${ED} as part of the path arguments to doins"
fi
