#!/usr/bin/env bash

SCRIPT=$1
shift

SHELL=$(ps -p $(ps -p $$ -o ppid=) -o comm=)
if [[ ${SHELL} != "bash" && ${SHELL} != "zsh" ]]; then
	echo "$(basename ${SCRIPT}): unsupported shell: ${SHELL}"
	exit 1
fi

exec ${SHELL} -c "source \"$(dirname ${0})\"/../pkgcore.sh && source \"${SCRIPT}\" \"$@\""
