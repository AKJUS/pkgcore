check_args 2

ln_option=
src_prefix=
if [[ ${HELPER_NAME} == dosym ]]; then
	ln_option=sn
else
	src_prefix="${D}"
fi

check_command_or_stop dodir "${2%/*}"
check_command ln -${ln_option}f "${src_prefix}${1}" "${D}${2}"
